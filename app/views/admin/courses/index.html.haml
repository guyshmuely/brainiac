-content_for :head, stylesheet_link_tag('admin/course')
%fieldset.field
  %legend
    Courses
  =link_to 'new', new_admin_course_path , :class=>'button'
  %table.data_table
    %thead
      %tr
        %th
          Display name
        %th
          Title
        %th.small
          Price($)
        %th.small
          Cards
        %th.small
          Actions
    %tbody
      -for course in @courses
        %tr{:class=>cycle ("even","odd")}
          %td=course.display_name
          %td
            =course.title
          %td
            =course.price_in_cents/100
          %td
            =course.cards.count
          %td
            =link_to '' , edit_admin_course_path(course) , :class =>'edit'
            =link_to '' , admin_course_path(course) , :method => :delete ,:confirm => "are you sure?", :class => 'delete'